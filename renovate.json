{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>elastic/renovate-config"
  ],
  "packageRules": [
    {
      "description": "Upstream agent dependencies are kept in sync via the gradle/update-upstream.sh script",
      "matchPackageNames": [
        "io.opentelemetry.instrumentation:opentelemetry-instrumentation-bom-alpha",
        "io.opentelemetry.semconv:**",
        "io.opentelemetry.contrib:**"
      ],
      "enabled": false
    },
    {
      "description": "We don't want to automagically upgrade the OpenAI version, and instead want there to be human involvement to trigger the upgrade",
      "matchPackageNames": [
        "com.openai:openai-java"
      ],
      "dependencyDashboardApproval": true
    }
  ],
  "ignorePaths": [
    ".github/**",
    ".buildkite/**",
    "examples/**",
    "jvmti-access/jni-build/*.Dockerfile",
    "instrumentation/openai-client-instrumentation/instrumentation-0.2/build.gradle.kts"
  ]
}
